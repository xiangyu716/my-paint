/**index.wxss**/

page {
  height: 100%;
  width: 100%;
  background-color: #ffd285;
  color: #333;
}
.container{
  position: relative;
  height: 100%;
  width: 100%;
  font-size: 24rpx;
  overflow: hidden;
}
.my-canvas{
  position: absolute;
  /* top: -50vh; */
  height: calc(100vh - 104rpx);
  width: calc(100vw - 20rpx);
  border: 2rpx dashed #fff;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.footer__button{
  width: 23%;
  height: 60rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #55a394;
}
.footer__button__state{
  background-color: #7267b1;
}
.footer__button--active{
  box-shadow: 0 0 0 2rpx #fff;
}

/* 更多弹窗-start */

.config-popup{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 20rpx 80rpx 20rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, .7);
  box-shadow: 0 0 10px 0 #ccc;
  border-radius: 10rpx 10rpx 0 0;
  z-index: 9;
}
/* 确定 */
.config-confirm{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #4c3f28;
  display: flex;
  justify-content: center;
}
/* 确定按钮 */
.config-confirm-btn{
  height: 60rpx;
  width: calc(100% - 40rpx);
  background-color: #fff;
  color: #333;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}
/* 弹窗按钮盒子 */
.config-items{
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}
/* 弹窗按钮 */
.config-item{
  width: calc(25% - 15rpx);
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.config-operation__header{
  width: 100%;
  text-align: center;
  color: #fff;
}
/* 弹窗按钮占位元素 */
.config-item--placehold{
  width: calc(25% - 15rpx);
}
.config-item__preview{
  display: flex;
  height: 50px;
  justify-content: center;
  align-items: center;
}
.config-item__preview__image{
  height: 50rpx;
  width: 50rpx;
}
.config-item__title{
  height: 50rpx;
  width: 100%;
  line-height: 50rpx;
  text-align: center;
  color: #333;
  border-top: 1rpx solid #d3d3d3;
}
.config-operation{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  width: 100%;
  padding-left: 20rpx;
  box-sizing: border-box;
  row-gap: 10rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #888;
}
.config-operation slider{
  width: calc(100% - 100rpx);
  margin: 0;
}
.config-brush-width__preview{
  border-radius: 50%;
  background-color: #333;
}
.config-escape-width__preview{
  max-height: 28px;
  border: 1px solid #333;
}
.config-brush-color__preview{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  box-shadow: 0 0 2rpx 0 #333;
}
.config-bg-color__preview{
  height: 50rpx;
  width: 50rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 2rpx 0 #333;
}
.config-operation__value{
  width: 80rpx;
  margin-left: 20rpx;
  text-align: center;
  color: #fff;
}
.config-operation__input{
  width: 80rpx;
  margin-left: 20rpx;
}
.config-operation__input input{
  background-color: #f5f5f5;
  border-radius: 10rpx;
  border: none;
  text-align: center;
  color: #333;
}
.config-operation__options{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.config-operation__option{
  background-color: #fff;
  border-radius: 10rpx;
  height: 80rpx;
  overflow: hidden;
}
.config-operation__option--active{
  box-shadow: 0 0 2rpx 2rpx #228be6;
}
.config-operation__option image{
  display: block;
  height: 100rpx;
  width: 100rpx;
  margin-top: -11rpx;
}
.width100{
  width: 100%;
}
.tips{
  color: #ffe675;
  text-align: center;
}