/**index.wxss**/

page {
  height: 100%;
  width: 100%;
  background-color: #ffd285;
}
.container{
  position: relative;
  height: 100%;
  width: 100%;
  font-size: 24rpx;
  overflow: hidden;
}
.my-canvas{
  position: absolute;
  height: calc(100vh - 104rpx);
  width: calc(100vw - 20rpx);
  border: 2rpx dashed #fff;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.footer__button{
  width: 18%;
  height: 60rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  background-color: #55a394;
}
.footer__button__state{
  background-color: #7267b1;
}
.footer__button--active{
  box-shadow: 0 0 0 2rpx #fff;
}
.config-item{
  margin-bottom: 20rpx;
}
.config-item__header{
  height: 30px;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.config-item__title{
  height: 50rpx;
  width: 150rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
  color: #333;
  margin-right: 20rpx;
  box-shadow: 0 0 2px 0 #d3d3d3;
}
.config-item__operation{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  width: 100%;
  padding-left: 20rpx;
  box-sizing: border-box;
  row-gap: 10rpx;
}
.config-item__operation slider{
  width: calc(100% - 100rpx);
  margin: 0;
}
.config-brush-width__preview{
  border-radius: 50%;
  background-color: #fff;
}
.config-escape-width__preview{
  max-height: 28px;
  border: 1px solid #fff;
}
.config-config-color__preview{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  box-shadow: 0 0 2rpx 0 #fff;
}
.config-bg-color__preview{
  height: 50rpx;
  width: 50rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 2rpx 0 #fff;
}
.config-item__value{
  width: 80rpx;
  margin-left: 20rpx;
  text-align: center;
  color: #fff;
}
.config-item__operation__input{
  width: 80rpx;
  margin-left: 20rpx;
}
.config-item__operation__input input{
  background-color: #f5f5f5;
  border-radius: 10rpx;
  border: none;
  text-align: center;
  color: #333;
}
.config-popup{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 20rpx 120rpx 20rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, .7);
  box-shadow: 0 0 10px 0 #ccc;
  border-radius: 10rpx 10rpx 0 0;
  z-index: 9;
}
.config-confirm{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #f3f3f3;
  color: #333;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}